@model DoctorSearchViewModel
@{
    ViewData["Title"] = "Поиск персонала";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Поиск персонала</h4>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" method="post" asp-controller="Doctors">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name1" class="control-label"></label>
                <input asp-for="name1" class="form-control" value=""/>
            </div>
            <div class="form-group">
                <label asp-for="name2" class="control-label"></label>
                <input asp-for="name2" class="form-control" value=""/>
            </div>
            <div class="form-group">
                <label asp-for="name3" class="control-label"></label>
                <input asp-for="name3" class="form-control" value=""/>
            </div>
            <div class="form-group">
                <label asp-for="Branch" class="control-label"></label>
                <select asp-for="Branch">
                    @foreach (var branch in ViewBag.Branches)
                    {
                        <option value="@branch">@branch</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Speciality" class="control-label"></label>
                <select asp-for="Speciality">
                    @foreach(var spec in ViewBag.Specs)
                    {
                        <option value="@spec">@spec</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input type="submit" asp-action="Search"
                           class="btn btn-primary" value="Найти" />
                    <a asp-action="Index" class="btn btn-dark">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>