@model EditUserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="name1" class="control-label"></label>
                <input asp-for="name1" class="form-control" />
                <span asp-validation-for="name1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name2" class="control-label"></label>
                <input asp-for="name2" class="form-control" />
                <span asp-validation-for="name2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name3" class="control-label"></label>
                <input asp-for="name3" class="form-control" />
                <span asp-validation-for="name3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role">
                    <option value="@RoleEnum.admin">Админ</option>
                    <option value="@RoleEnum.doctor">Доктор</option>
                    <option value="@RoleEnum.pacient">Пациент</option>
                </select>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input type="submit" asp-action="Edit"
                           class="btn btn-primary" value="Сохранить" />
                    <a asp-action="Index" class="btn btn-dark">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>

