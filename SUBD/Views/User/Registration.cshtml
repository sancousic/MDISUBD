@model UserViewModel
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>
<br /> 

<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration" method="post" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name1" class="control-label"></label>
                <input asp-for="name1" class="form-control" />
                <span asp-validation-for="name1" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="name2" class="control-label" ></label>
                <input asp-for="name2" class="form-control" />
                <span asp-validation-for="name2" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="name3" class="control-label" ></label>
                <input asp-for="name3" class="form-control" />
                <span asp-validation-for="name3" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="login" class="control-label" >
                </label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label" ></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input type="submit" asp-action="Registration"
                           class="btn btn-primary" value="Зарегистрировать"/>
                </div>
            </div>
        </form>
    </div>
</div>

